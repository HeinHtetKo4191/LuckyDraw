@model LuckyD.Models.WinningNumber
@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "AddWinning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Adding Winning Numbers</h2>


@using (Html.BeginForm("Create", "Winning"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
    <div class="form-group" style="margin-top: 40px;">
        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Ran } })
            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Draw Your Lucky Number" class="btn btn-default" />
        </div>
    </div>
</div>
}
@using (Html.BeginForm("GenerateRandomNum", "Winning"))
{
    <div class="form-group" style="position: relative; left: -10px;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Generate Randomly" class="btn btn-default" />
        </div>
    </div>

}
<hr />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

