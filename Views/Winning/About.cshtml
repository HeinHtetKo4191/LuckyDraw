@model IEnumerable<LuckyD.Models.WinningNumber>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Your Winning Number List</h2>

<table class="table table-striped table-hover" style="margin-top: 40px">
    <tr>
        <th>
            <p class="text-center">Serial Numbers</p>
        </th>
        @if (User.IsInRole("Admin"))
        {
            <th>
                <p class="text-center">User</p>
            </th>
        }
            <th>
                <p class="text-center">Winning Numbers</p>
            </th>

        </tr>

    @foreach (var item in Model)
    {

<tr>
    @if (User.IsInRole("Admin"))
    {
        <td>
            <p class="text-center">
                @Html.DisplayFor(modelItem => item.AllQuentity)
            </p>
        </td>

        <td>
            <p class="text-center">
                @Html.DisplayFor(modelItem => item.User)
            </p>
        </td>
    }

    @if (!User.IsInRole("Admin"))
    {
        <td>
            <p class="text-center">
                @Html.DisplayFor(modelItem => item.Quantity)
            </p>
        </td>
    }
    

    <td>
        <p class="text-center">
            @Html.DisplayFor(modelItem => item.Number)
        </p>
    </td>

</tr>
    }


</table>

@if (!User.IsInRole("Admin"))
{

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-default"><a href="/Winning/AddWinning" style="text-decoration: none;">Back for adding Winning Numbers</a></button>
        </div>
    </div>

}

@if (User.IsInRole("Admin"))
{ 
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button class="btn btn-default"><a href="/Winning/Admin" style="text-decoration: none;">Back for Choosing Winning Numbers</a></button>
    </div>
</div>
}
