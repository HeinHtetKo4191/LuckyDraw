@model IEnumerable<LuckyD.Models.Price>

@{
    ViewBag.Title = "Winner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Winner</h2>

<table class="table table-striped table-hover" style="margin-top: 40px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Winner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AwardedNumber)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Winner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardedNumber)
            </td>
        </tr>
    }

</table>

@if (!User.IsInRole("Admin"))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-default"><a href="/Winning/AddWinning" style="text-decoration: none;">Back for adding Winning Numbers</a></button>
        </div>
    </div>
}

@if (User.IsInRole("Admin"))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-default"><a href="/Winning/Admin" style="text-decoration: none;">Back for Choosing Winning Numbers</a></button>
        </div>
    </div>
}
